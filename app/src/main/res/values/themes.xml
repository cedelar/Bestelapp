<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bestelapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/cabin</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="Subtitle" parent="Title" >
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleButton" >
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_XL</item>
        <item name="android:layout_marginTop">@dimen/margin_SMALL</item>
        <item name="android:layout_marginEnd">@dimen/margin_XL</item>
        <item name="android:layout_marginBottom">@dimen/margin_NORMAL</item>
    </style>

    <style name="BottomButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_NORMAL</item>
        <item name="android:layout_marginTop">@dimen/margin_SMALL</item>
        <item name="android:layout_marginEnd">@dimen/margin_NORMAL</item>
        <item name="android:layout_marginBottom">@dimen/margin_SMALL</item>
    </style>

    <style name="ListButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_SMALL</item>
    </style>

</resources>