<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderListViewModel"
            type="com.example.bestelapp.fragments.orderlist.OrderlistViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_orderlist_showorders"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btn_orderlist_order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/listitem_orderlist_product" />

        <Button
            android:id="@+id/btn_orderlist_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_NORMAL"
            android:layout_marginTop="@dimen/margin_SMALL"
            android:layout_marginEnd="@dimen/margin_NORMAL"
            android:layout_marginBottom="@dimen/margin_SMALL"
            android:enabled="@{orderListViewModel.confirmButtonVisible}"
            android:onClick="@{() -> orderListViewModel.onConfirmClicked()}"
            android:text="@string/orderlist_orderbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_orderlist_showorders" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>